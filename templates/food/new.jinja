{% extends 'base.jinja' %}{% block content %}

<section class="container"> 
    <h2 class="new-title">Not sure? Check out our <a class="new-title__tips" href="/food/tips">tips</a></h2>

    <form class="new-form" action="/food/show" method="post">
        <div>
            <label class="new-form__label" for="user">Username:</label>
            <select name="user_id" id="user">
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div>
            <label class="new-form__label" for="name">Food:</label>
            <input type="text" name="name" id="name" required>
        </div>
        <div>
            <label class="new-form__label" for="categories">Category:</label>
            <select name="category" id="category">
                <option value="main">Main</option>
                <option value="fruit">Fruit</option>
                <option value="nuts">Nuts</option>
                <option value="extra nibble">Extra nibble</option>
                <option value="sweet">Sweet</option>
            </select>
        </div>
        <div>
            <h5 class="ingredients_exp">Optional: Add ingredients for your shopping list </h5>
            <label class="new-form__label" for="ingredients">Ingredients:</label>
            <input type="text" name="ingredients" id="ingredients">
        </div>
        <button class="new__button" type="submit">Add food</button>
    </form>

</section>

{% endblock content %}
